<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/head_tab</item>
        <item name="colorPrimaryDark">@color/head_tab</item>
        <item name="colorAccent">@color/special_bottom</item>

    </style>
    
    <declare-styleable name="WatchView" >
        <attr name="time" format="string"></attr>
        <attr name="time_color" format="color"></attr>
        <attr name="msize" format="dimension"></attr>
    </declare-styleable>

</resources>
