<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:id="@+id/special_second_right_img"
        />
    <TextView
    android:textSize="16sp"
    android:textColor="@color/dark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/special_second_right_img"
    android:id="@+id/special_second_right_name"
    android:layout_toRightOf="@id/special_second_right_img"
    />
    <TextView
        android:layout_alignBottom="@id/special_second_right_img"
        android:text="@string/hot_type"
        android:textSize="16sp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/special_second_right_img"
        android:id="@+id/special_second_right_type_text"
        android:layout_toRightOf="@id/special_second_right_img"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_alignTop="@id/special_second_right_img"
        android:layout_alignBottom="@id/special_second_right_img"
        android:textSize="16sp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/special_second_right_type"
        android:layout_toRightOf="@id/special_second_right_type_text"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_alignTop="@id/special_second_right_img"
        android:layout_alignBottom="@id/special_second_right_img"
        android:text="@string/hot_size"
        android:textSize="16sp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/special_second_right_size_text"
        android:layout_toRightOf="@id/special_second_right_type"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_alignTop="@id/special_second_right_img"
        android:layout_alignBottom="@id/special_second_right_img"
        android:textSize="16sp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/special_second_right_size"
        android:layout_toRightOf="@id/special_second_right_size_text"
        />
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/special_second_right_img"
        android:id="@+id/special_second_right_desc"
        android:layout_toRightOf="@id/special_second_right_img"
        />

    <Button
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_rectangle"
        android:text="下载"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/special_second_right_bn"

        />
</RelativeLayout>