<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qianfeng.yyz.myswift.fragment.SpecialFragment">


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/special_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tl_textsize="17sp"
        app:tl_textBold="NONE"
        app:tl_tab_space_equal="true"
        app:tl_divider_color="@color/timebackground"
        app:tl_divider_width="1dp"
        app:tl_divider_padding="10dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="1dp"
        app:tl_indicator_color="@color/head_tab"
        app:tl_textSelectColor="@color/head_tab"
        app:tl_textUnselectColor="@color/head_tab"
        app:tl_underline_color="@color/timebackground"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="1dp"
        app:tl_indicator_style="NORMAL"
        >
    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/special_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
