<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp">



    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/my_gift_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/my_gift_img"
        android:layout_toRightOf="@id/my_gift_img"
        android:textSize="16sp"
        android:id="@+id/my_gift_name"
        android:textColor="@color/dark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/my_gift_img"
        android:layout_alignBottom="@id/my_gift_img"
        android:gravity="center"
        android:text="@string/overtime"
        android:id="@+id/my_gift_time_text"
        android:layout_toRightOf="@id/my_gift_img"
        android:textColor="@color/dark"
        android:textSize="13sp"
        />
    <TextView
        android:layout_alignTop="@id/my_gift_img"
        android:layout_alignBottom="@id/my_gift_img"
        android:gravity="center"
        android:textColor="@color/dark"
        android:id="@+id/my_gift_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/my_gift_time_text"
        android:textSize="13sp"
        />
    <TextView
        android:textColor="@color/head_tab"
        android:typeface="sans"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_gift_img"
        android:layout_toRightOf="@id/my_gift_img"
        android:id="@+id/my_gift_code"
        />
   <Button
       android:focusableInTouchMode="false"
       android:focusable="false"
       android:layout_width="60dp"
       android:layout_height="30dp"
       android:id="@+id/my_gift_btn"
       android:layout_alignParentRight="true"
       android:background="@drawable/rounded_rectangle"
       android:layout_centerVertical="true"
       android:layout_marginRight="10dp"
       android:text="@string/copy"
       android:textColor="@color/white"
       />

</RelativeLayout>