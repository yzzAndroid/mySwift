<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.yyz.myswift.mvp.view.SignInActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sing_in_head"
        android:background="@color/head_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:onClick="back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/user_singin"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/special_bottom"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
<RelativeLayout
    android:layout_below="@id/sing_in_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sing_in_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_phone"
        android:scaleType="centerCrop"
        />
    <EditText
        android:id="@+id/sing_in_phone_numble"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sing_in_phone"
        android:layout_toRightOf="@id/sing_in_phone"
        android:layout_alignTop="@id/sing_in_phone"
        android:hint="请输入11位手机号"
        android:inputType="number"
        android:marqueeRepeatLimit="11"
        android:background="@color/white"
        android:gravity="center_vertical"
        />
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/special_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_below="@id/sing_in_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sing_in_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_password"
            android:scaleType="centerCrop"
            />
        <EditText
            android:id="@+id/sing_in_pwd"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sing_in_password"
            android:layout_toRightOf="@id/sing_in_password"
            android:layout_alignTop="@id/sing_in_password"
            android:hint="请输入6-16位的字符或者数字的密码"
            android:inputType="textPassword"
            android:background="@color/white"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/special_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_below="@id/sing_in_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sing_in_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_heart"
            android:scaleType="centerCrop"
            />
        <EditText
            android:id="@+id/sing_in_nuck_name"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sing_in_name"
            android:layout_toRightOf="@id/sing_in_name"
            android:layout_alignTop="@id/sing_in_name"
            android:hint="请输入少于9个字符的昵称"
            android:marqueeRepeatLimit="9"
            android:background="@color/white"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/special_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="20dp"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:onClick="singin"
        />
</LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:visibility="gone"
        android:id="@+id/sing_in_load"
        android:background="@color/special_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/loading"
            />
    </LinearLayout>
</FrameLayout>
