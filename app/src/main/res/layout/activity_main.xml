<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
       android:background="@mipmap/menu_background"
        tools:context=".activity.MainActivity">


    <com.qianfeng.yyz.myswift.view.MySlidingPaneLayout
        android:id="@+id/home_spl"
        android:background="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--左侧面板-->
        <RelativeLayout
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="left"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/left_container"
                android:onClick="login"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/left_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/def_loading"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/left_name"
                android:layout_toRightOf="@id/left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_login"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                />
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_money"
                    android:textSize="17sp"
                    android:text="0"
                    android:layout_toRightOf="@id/left_img"
                    android:layout_alignParentBottom="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/gb"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/left_money"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <ListView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:divider="#00000000"
                android:layout_below="@id/left_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/left_listview"
                />
        </RelativeLayout>

<!--类容-->
        <com.qianfeng.yyz.myswift.view.MyRelativeLayout
            android:background="@color/white"
            android:id="@+id/content_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/head_title"
            android:layout_width="match_parent"
            android:background="@color/head_tab"
            android:layout_height="50dp">

            <ImageView
                android:onClick="contral"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/title_bar_menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/head_tab_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/gift_title"
                android:layout_centerInParent="true"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/head_gift_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_search"
                android:onClick="search"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

            <RelativeLayout
                android:layout_above="@+id/bottom_line"
                android:id="@+id/head_container"
                android:layout_below="@id/head_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>

            <TextView
                android:background="@color/head_tab"
                android:id="@id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/bottom_gb"
                />
            <RadioGroup
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:id="@+id/bottom_gb"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RadioButton
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:textSize="0sp"
                    android:id="@+id/bottom_gift"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/bottom_gift"
                    />
                <RadioButton
                    android:layout_gravity="center"
                    android:textSize="0sp"
                    android:id="@+id/bottom_open"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/bottom_open"
                    />
                <RadioButton
                    android:layout_gravity="center"
                    android:textSize="0sp"
                    android:id="@+id/bottom_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/bottom_hot"
                    />
                <RadioButton
                    android:layout_gravity="center"
                    android:textSize="0sp"
                    android:id="@+id/bottom_special"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/bottom_special"
                    />
            </RadioGroup>
        </com.qianfeng.yyz.myswift.view.MyRelativeLayout>
    </com.qianfeng.yyz.myswift.view.MySlidingPaneLayout>
</RelativeLayout>


