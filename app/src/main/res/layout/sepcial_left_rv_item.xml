<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/special_left_item_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/timebackground"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_below="@id/special_left_item_text"
        android:id="@+id/special_left_item_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_corner_radius="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_alignBottom="@id/special_left_item_img"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/special_bottom"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/special_left_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
        <com.qianfeng.yyz.myswift.view.WatchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/special_left_item_time"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:time_color="@color/white"
            />

    </LinearLayout>



</RelativeLayout>